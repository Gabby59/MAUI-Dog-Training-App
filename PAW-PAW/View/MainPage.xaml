-->

            <Button Margin="0,15,0,5" FontFamily="OpenSansRegular"
                            Text="Go to Dashboard" 
                            BackgroundColor="DarkCyan"
                    Command="{Binding ButtonTapCommand}"
                      />
        </VerticalStackLayout>
    </ScrollView>
